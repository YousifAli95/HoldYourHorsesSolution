@model IndexPartialVM[]

@foreach (var card in Model)
{
    <div class="card-div" style="position: relative">

        <partial name="~/Views/Shop/SVGs/CompareIcon.cshtml" model="@card" />

        @if (User.Identity.IsAuthenticated)
        {
            <partial name="~/Views/Shop/SVGs/Heart.cshtml" model="@card" />
        }

        <a asp-controller="Shop" asp-action="ArticleDetails" asp-route-articleNr="@card.ArticleNr">
            <div class="article-card">
                <img src="@ShopUtils.GetPictureUrl(card.ArticleName)"
                 alt="@card.ArticleName" />
                <div id="price-name-container">
                    <p class="article-name">@card.ArticleName</p>
                    <div class="arrow-div">
                        <div class="price"><span class="price-span"> @ShopUtils.FormatPrice(card.Price) kr</span></div>
                        <svg class="arrow-right" viewBox="0 0 100 200" xmlns="http://www.w3.org/2000/svg">
                            <polygon points="0,100 100,200 100,0" />
                        </svg>
                    </div>
                </div>
            </div>
        </a>
    </div>
}