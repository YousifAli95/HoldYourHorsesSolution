@model IndexVM

@section CSS{
    <link rel="stylesheet" href="~/CSS/index.css">
    <link rel="stylesheet" href="~/CSS/filter.css">
}

@section JS{
    <script src="~/JS/index.js" defer></script>
}

<div class="super-container">
    @Html.Partial("_FilterPartial", Model)

   <div class="main-div">
        <h1 id="index-header">Nordens största butik för käpphästar</h1>
        <div class="compare-select">
            <div id="MySelect">
                <select name="sort" id="sort">
                    <option value="1Price">Pris Stigande</option>
                    <option value="0Price">Pris Fallande</option>
                    <option value="1Name">Namn (A-Ö)</option>
                    <option value="0Name">Namn (Ö-A)</option>
                </select>
            </div>
            <button class="compare-btn" onclick="location.href='/jämför'">Jämför Käpphästar</button>
        </div>
        <div class="card-container">
        </div>
    </div>
</div>