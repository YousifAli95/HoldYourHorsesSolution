@model ArticleDetailsVM

@section CSS
    {
    <link rel="stylesheet" href="~/CSS/articleDetails.css">
}
@section JS
    {
    <script src="~/JS/articleDetails.js"></script>

}
<div class="super-container">
    <div id="top-container">
        <h1 id="article-name">@Model.ArticleName</h1>
        
        <div id="image-div">
            <img src="@ShopUtils.GetPictureUrl(Model.ArticleName)" alt="@Model.ArticleName" />
        </div>

        <div id="price-amount-div">
            <span id="price"> @ShopUtils.FormatPrice(Model.Price) kr/st</span>
            <input type="number" max="99" min="1" value="1" id="number-of-items" />
        </div>
        <button id="add-to-cart-button" class="default-button" onclick="updateShoppingCart()">Lägg till i varukorgen</button>
    </div>

    <div class="description-container">
            <h1 id="description-h1">Beskrivning</h1>
            <p id="description-p">@Model.Description</p>

        <div class="grid-container">
            <div class="grid-item">ArtikelNr</div>
            <div class="grid-item" id="article-nr">@Model.ArticleNr</div>
            <div class="grid-item">Hästkrafter</div>
            <div class="grid-item">@Model.HorsePowers hk</div>
            <div class="grid-item">Trädensitet</div>
            <div class="grid-item">@Model.WoodDensity cm<sup>3</sup></div>
            <div class="grid-item">Material</div>
            <div class="grid-item">@Model.Material</div>
            <div class="grid-item">Kategori</div>
            <div class="grid-item">@Model.Category</div>
            <div class="grid-item">TIllverkningsland</div>
            <div class="grid-item">@Model.ProductionCountry</div>
            <div class="grid-item">ABS-broms</div>
            <div class="grid-item">@Model.GetAbsBrakeAsString()</div>
        </div>
    </div>
</div>
