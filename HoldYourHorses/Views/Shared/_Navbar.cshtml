<div class="navbar-container">

    <div class="navbar">
        <a id="a-company-name" asp-controller="Shop" asp-action="Index">
            <div id="company-logo">@Html.Partial("_CompanyLogo")</div>
            <div class="h1-navbar">
                <h1 class="h1-logo">HållDinKäpp</h1>
            </div>
        </a>

        <div class="search-div">
                <input id="search-input" type="text" placeholder="Sök" name="search">
                <button onclick="searchFunction()" id="search-btn" type="submit">
                <partial name="~/Views/Shared/SVGs/SearchIcon.cshtml" />
                </button>
            </div>

        <div class="logos">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="navbar-svg-navigation" asp-controller="Account" asp-action="UserPage">
                    <partial name="~/Views/Shared/SVGs/AccountIcon.cshtml" />
                    <p class="logo-p"> Konto</p>
                </a>
            }
            else
            {
                <a class="navbar-svg-navigation" asp-controller="Account" asp-action="Login">
                    <partial name="~/Views/Shared/SVGs/AccountIcon.cshtml" />
                    <p class="logo-p"> Logga in</p>
                </a>
            }

            <a id="a-cart" class="navbar-svg-navigation" asp-controller="Shop" asp-action="ShoppingCart">
                <span id="number-of-products" class="fa badge fa-lg" value="@await Component.InvokeAsync("ShoppingCart")">
                    <partial name="~/Views/Shared/SVGs/ShoppingCartIcon.cshtml" />
                </span>
                <p class="logo-p"> Kundvagn</p>
            </a>

        </div>
    </div>
</div>
