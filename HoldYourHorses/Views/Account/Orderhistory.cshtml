@model OrderhistoryVM
@section CSS{
	<link rel="stylesheet" href="~/CSS/orderhistory.css">
}

	<div class="article-container" id="container">
		<div>
			@foreach (var orderId in Model.OrderHej.OrderByDescending(o => o))
		{

			var hejhej = orderId;
			<div>
				<h2 class="orderTitel"> Order: @orderId</h2>

				<ul>
					@foreach (var item in Model.Historik)
					{
						@if (hejhej == item.OrderId)
						{

							<li>
								<div class="orderinfo">
									@item.Amount st
									@item.ArticleName
									@Model.getPriceFormatted(@item.Price*item.Amount) kr
								</div>
							</li>

						}
					}
				</ul>
				<div>
					<strong>Totalsumma:  @Model.getPriceFormatted(@Model.Historik.Where(o => o.OrderId == hejhej).Select(o => o.Price*o.Amount).Sum()) kr</strong>
				</div>
			</div>
		}
	</div>

</div>
</div>